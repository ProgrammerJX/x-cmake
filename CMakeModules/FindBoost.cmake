if(NOT DEFINED INSTALL_BOOST AND BUILD_SHARED_LIBS)
endif()

if(NOT DEFINED 3RDPARTY_BOOST_DIR)
    set(3RDPARTY_BOOST_DIR "" CACHE PATH "Boost Root" FORCE)
else()
    if(NOT DEFINED 3RDPARTY_BOOST_INCLUDE_DIR)
        if(EXISTS "${3RDPARTY_BOOST_DIR}/include")
            set(3RDPARTY_BOOST_INCLUDE_DIR "${3RDPARTY_BOOST_DIR}/include" CACHE PATH "Boost Include" FORCE)
        else()
            set(3RDPARTY_BOOST_INCLUDE_DIR "BOOST_INCLUDE_DIR NOT FOUND" CACHE PATH "" FORCE)
        endif()
    else()
        if(NOT EXISTS "${3RDPARTY_BOOST_INCLUDE_DIR}")
            set(3RDPARTY_BOOST_INCLUDE_DIR "BOOST_INCLUDE_DIR NOT FOUND" CACHE PATH "" FORCE)
        endif()
    endif()

    if(NOT DEFINED 3RDPARTY_BOOST_LIB_DIR)
        if(EXISTS "${3RDPARTY_BOOST_DIR}/lib")
            set(3RDPARTY_BOOST_LIB_DIR "${3RDPARTY_BOOST_DIR}/lib" CACHE PATH "Boost Lib" FORCE)
        else()
            set(3RDPARTY_BOOST_LIB_DIR "3RDPARTY_BOOST_LIB_DIR NOT FOUND" CACHE PATH "" FORCE)
        endif()
    else()
        if(NOT EXISTS "${3RDPARTY_BOOST_LIB_DIR}")
            set(3RDPARTY_BOOST_LIB_DIR "3RDPARTY_BOOST_LIB_DIR NOT FOUND" CACHE PATH "" FORCE)
        endif()
    endif()

    if(NOT DEFINED 3RDPARTY_BOOST_DLL_DIR)
        if(EXISTS "${3RDPARTY_BOOST_DIR}/bin")
            set(3RDPARTY_BOOST_DLL_DIR "${3RDPARTY_BOOST_DIR}/bin" CACHE PATH "Boost bin" FORCE)
        else()
            set(3RDPARTY_BOOST_DLL_DIR "3RDPARTY_BOOST_DLL_DIR NOT FOUND" CACHE PATH "" FORCE)
        endif()
    else()
        if(NOT EXISTS "${3RDPARTY_BOOST_DLL_DIR}")
            set(3RDPARTY_BOOST_DLL_DIR "3RDPARTY_BOOST_DLL_DIR NOT FOUND" CACHE PATH "" FORCE)
        endif()
    endif()
endif()